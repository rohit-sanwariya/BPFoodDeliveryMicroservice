@model IEnumerable<CouponDTO>

@{
    ViewBag.Title = "Coupons";
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-primary float-right" id="addCouponBtn">Add New Coupon</button>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Code</th>
                <th>Discount</th>
                <th>Min Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coupon in Model)
            {
                <tr>
                    <td>@coupon.Id</td>
                    <td>@coupon.Code</td>
                    <td>@coupon.Discount</td>
                    <td>@coupon.MinAmount</td>
                    <td>
                        <button class="btn btn-primary editCouponBtn">Edit</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

